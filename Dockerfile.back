# Utiliser l'image officielle PHP 8.3 avec Apache
FROM php:8.3-apache

# Installer les extensions PHP n√©cessaires
RUN apt-get update && apt-get install -y \
    libpng-dev \
    libicu-dev \
    libjpeg62-turbo-dev \
    libfreetype6-dev \
    libzip-dev \
    zip \
    git \
    && docker-php-ext-configure gd --with-freetype --with-jpeg \
    && docker-php-ext-install gd zip pdo pdo_mysql intl opcache

# Activer le module mod_rewrite d'Apache pour les URL r√©√©crites
RUN a2enmod rewrite

# gestion des headers pour le CORS
RUN a2enmod headers

RUN chown -R www-data:www-data /var/www/html

COPY --from=composer:latest /usr/bin/composer /usr/bin/composer

# Change le DocumentRoot vers /var/www/html/public
ENV APACHE_DOCUMENT_ROOT=/var/www/html/public

# üõ†Ô∏è Rediriger Apache vers /public
RUN sed -ri -e 's!/var/www/html!/var/www/html/public!g' /etc/apache2/sites-available/000-default.conf

# Copier le code source dans le dossier /var/www/html
COPY . /var/www/html/

# D√©finir le r√©pertoire de travail pour Apache
WORKDIR /var/www/html/

# Exposer le port 80 pour Apache
EXPOSE 80

# D√©marrer Apache en mode non d√©tach√©
CMD ["apache2-foreground"]
